.site-meta {
  margin: 0;
  text-align: $site-meta-text-align;

  +mobile() { text-align: center; }
}

.brand {
  position: relative;
  display: inline-block;
  padding: 0 40px;
  color: #f9fafa;
  border-bottom: none;
  &:hover { color: $brand-hover-color; }
}

.logo {
  display: inline-block;
  margin-right: 5px;
  line-height: 36px;
  vertical-align: top;
}

.site-title {
  display: inline-block;
  vertical-align: top;
  line-height: 36px;
  font-size: 62px;
  font-weight: 300;
  text-shadow: 2px 2px 2px rgba(0,0,0,0.5);
  font-family: $font-family-logo;
}

.site-subtitle {
  font-family: "Noto Sans";
  margin-top: 30px;
  font-size: 14px;
  color: #f9fafa;
  font-weight:300;
  text-shadow: 2px 2px 2px rgba(0,0,0,0.5);
}

.use-motion {
  .brand { opacity: 0; }

  .logo, .site-title, .site-subtitle {
    opacity: 0;
    position: relative;
    top: -10px;
  }
}
